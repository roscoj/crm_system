<h1>Edit a Invoicee Details</h1>

<form name="edited_invoicee_info" action="/admin/invoicees/<%= @invoicee_data[:id] %>/edit" method="post">

  <div>
    <label for="first_name">
      Student First Name:
      <input name="first_name" type="text" value="<%= @invoicee_data[:first_name] %>">
    </label>
  </div>

  <div>
    <label for="last_name">
      Student Last Name:
      <input name="last_name" type="text" value="<%= @invoicee_data[:last_name] %>">
    </label>
  </div>

  <div>
    <label for="Telephone">
      Telephone:
      <input name="telephone" type="text" value="<%= @invoicee_data[:telephone] %>">
    </label>
  </div>

  <div>
    <label for="email">
      Email:
      <input name="email" type="text" value="<%= @invoicee_data[:email] %>">
    </label>
  </div>

  <div>
    <label for="payment_method">  
      Payment Method:
      <select name="payment_method">
        <% @payment_methods.each do |payment_method| %>
				  <% if @invoicee_data[:payment_method] == payment_method %>			
					  <option value="<%= payment_method %>" selected >
							<%= payment_method %>
						</option>
					<% else %>
						<option value="<%= payment_method %>">
							<%= payment_method %>
						</option>
					<% end %>
				<% end %>
			</select>
    </label>
  </div>

  <div>
    <label for="address">  
      Payment Method:
      <select name="address_id">
        <% @addresses.each do |row| %>
				  <% if @invoicee_data[:address_id] == row[:id] %>			
					  <option value="<%= row[:id] %>" selected >
              <%= row[:address_line_1] %> <%= row[:address_line_2] %> <%= row[:town] %> <%= row[:postcode] %>
						</option>
					<% else %>
						<option value="<%= row[:id] %>">
              <%= row[:address_line_1] %> <%= row[:address_line_2] %> <%= row[:town] %> <%= row[:postcode] %>
						</option>
					<% end %>
				<% end %>
			</select>
    </label>
  </div>

  <div>
    <button type="submit">Save Edited Information</button>
  </div>

</form>
